.project(data-contribs=project.contributors.length, data-name=project.title, data-date=("undefined" == typeof project.created_at) ? 0 : project.created_at, id="project-" + project.id, class=project.status)
  
  .well
    .well-content
      h3
        a(href="/p/" + project.id, target="_blank") #{project.title}
      p #{project.description}

      h6 Managed by
      img(src=project.leader.picture)

      h6 Contributors
      each contributor in project.contributors
        img(src=contributor.picture)
      
      h6 Followers
      each follower in project.followers
        img(src=follower.picture)

    .row-fluid
      .aging.activity.created_at
        span.tooltips(data-icon="N", aria-hidden="true", rel="tooltip", title= moment(project.created_at).fromNow())
      .activity.people #{project.followers.length}
        span(data-icon="6", aria-hidden="true")
      .span3.pull-right.edit
        if(user && project.leader.id == user.id)
          a.btn.btn-link(href='/projects/edit/'+project._id) Edit
