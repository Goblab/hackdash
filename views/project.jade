.project.span4(data-contribs=project.contributors.length, data-name=project.title, data-date=("undefined" == typeof project.created_at) ? 0 : project.created_at, id="project-" + project.id, class=project.status)
  
  .well
    
    h3
      a(href="/p/" + project.id, target="_blank") #{project.summary}
    p #{project.description}
    .info
      if(project.tags.length)
        span.tags Tags: #{project.tags.join(', ')}

      .actions
        .btn-group
          if(user && project.leader.id == user.id)
            a.btn(href='/projects/edit/'+project._id) Edit

    .row-fluid
      .span2.activity.people #{project.followers.length}
        span(data-icon="6", aria-hidden="true")
      .span6.aging.activity.created_at=  moment(project.created_at).fromNow()
        span.tooltips(data-icon="P", aria-hidden="true", rel="tooltip", title="A nice tooltip")
