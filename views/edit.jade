form.ajaxForm.form-horizontal(action="/api/projects/edit/" + project.id, method="POST")
  .modal-header
    button(class="close", type="button", data-dismiss="modal", aria-hidde"true")&times;
    h3 Edit project

  .modal-body
    
    .control-group
     .controls
      input(type="text", class="input-xlarge", placeholder="Title", name="title", value=project.title)

    .control-group
     .controls
      textarea(class="input-xlarge", id="description", name="description", rows="4", maxlength="400", placeholder="Description") #{project.description}

    .control-group
      .controls
        #dragdrop 
          p Drag Photo Here
          input(type="file", name="cover_fall", id="cover_fall")        

    .control-group
     .controls
      input(class="input-xlarge", type="text", name="link", id="link", placeholder="Link", value=project.link)

    .control-group
     .controls
      input(class="input-xlarge", type="text", name="tags", id="tags", placeholder="Tags", value=project.tags.join(','))
    
    .control-group
     .controls
      select(class="input-xlarge", name="status", id="status", value=project.status)
       each status in statuses
        option(value=status)= status
    
  .modal-footer

    button.btn.btn-cancel Cancel
    button.btn.btn-custom(type="submit") Save changes

